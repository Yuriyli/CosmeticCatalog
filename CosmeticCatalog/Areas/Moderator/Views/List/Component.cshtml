@model List<Component>
@{
    ViewData["Title"] = "Список компонентов";
}
<table class="table">
    <thead>
        <tr>
            <th scope="col">Название</th>
            <th scope="col">Теги</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td><a class="table-link" asp-action="Component" asp-controller="Edit" asp-route-id="@c.Id">@c.Name</a></td>
                <td>
                    @for (int i = 0; i < c.Tags.Count; i++)
                    {
                        <p class="tag-list">@c.Tags[i].Name</p>
                    }
                </td>

            </tr>
        }
    </tbody>
</table>