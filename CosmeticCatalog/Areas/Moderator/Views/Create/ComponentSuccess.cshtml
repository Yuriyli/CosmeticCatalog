@model Component
@{
    ViewData["Title"] = "Компонент создан";
}
<div style="text-align:center;">
    <card title="Компонент @("\"" + @Model.Name + "\"") успешно создан">
        <form method="get" asp-area="Moderator" asp-controller="Create" asp-action="Component">
            <button type="submit" class="btn btn-primary m-1" data-bs-dismiss="modal">Создать еще</button>
        </form>
        <form method="get" asp-area="Moderator" asp-controller="List" asp-action="Component">
            <button type="submit" class="btn btn-primary m-1">Перейти к спику компонентов</button>
        </form>
    </card>
</div>